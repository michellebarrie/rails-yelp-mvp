<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @restaurant.name %></h5>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= @restaurant.category %></li>
    <li class="list-group-item"><%= @restaurant.phone_number %></li>
    <li class="list-group-item"><%= @restaurant.address %></li>
  </ul>
  <div class="card-body">
    <%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
    <%= link_to 'Back', restaurants_path %> |
    <%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>
  </div>
</div>
